}

.player-back-button:hover,
.shopping-overview-button:hover,
.dm-back-button:hover {
  background-color: #f0f0f0;
}

/* Adjust containers to account for fixed header */
.player-container {
  margin-top: 70px;
  padding: 20px;
}

.page-container {
  margin-top: 70px;
}

/* Hamburger menu styling */
.hamburger-menu {
  position: relative;
  z-index: 1000;
}

.hamburger-button {
  width: 40px;
  height: 40px;
  background: none;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 4px;
  padding: 8px;
  transition: background-color 0.2s;
}

.hamburger-button:hover {
  background-color: #f0f0f0;
}

/* Hamburger menu in header bar */
.player-header-bar .hamburger-menu,
.dm-header-bar .hamburger-menu {
  position: static;
  margin: 0;
}

.hamburger-button div {
  width: 20px;
  height: 2px;
  background-color: #333;
  border-radius: 2px;
  transition: all 0.3s;
}

/* ========================================
   MOBILE RESPONSIVE - DM PAGES
   ======================================== */

@media (max-width: 768px) {
  /* Prevent horizontal scroll */
  body, html, #root {
    overflow-x: hidden !important;
    max-width: 100vw !important;
  }

  /* Fixed Header Bar on Mobile */
  .player-header-bar,
  .dm-header-bar {
    height: 56px;
    padding: 0 10px;
  }

  .player-header-title,
  .dm-header-title {
    font-size: 18px;
    padding: 0 5px;
  }

  .player-back-button,
  .shopping-overview-button,
  .dm-back-button {
    font-size: 20px;
    padding: 6px 10px;
    min-width: 36px;
    height: 36px;
  }

  .hamburger-button {
    width: 36px;
    height: 36px;
  }

  .hamburger-button div {
    width: 18px;
  }

  /* Page Container */
  .page-container {
    padding: 15px;
    margin-top: 66px;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
  }

  .player-container {
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
    padding: 15px;
    margin-top: 66px;
  }

  /* Page Header */
  .page-header-fullwidth {
    padding: 20px 15px;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
  }

  .page-header,
  .player-header,
  .dashboard-header {
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  .page-header-content h1 {
    font-size: 24px;
    max-width: 100%;
    overflow-wrap: break-word;
  }

  /* Ensure images don't cause overflow */
  img {
    max-width: 100%;
    height: auto;
  }

  /* Back Button - in header bar (no positioning needed) */
  button[title="Back to Dashboard"],
  button[title="Back to Shops"] {
