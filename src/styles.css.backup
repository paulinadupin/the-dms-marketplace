  .grid-container,
  .grid-container-sm {
    grid-template-columns: 1fr;
    gap: 15px;
    width: 100%;
    max-width: 100%;
  }

  .player-items-grid,
  .player-shops-grid {
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  /* Controls Container - keep horizontal on tablet */
  .button-group {
    flex-wrap: wrap;
  }

  .button-group button {
    flex: 0 0 auto;
  }

  /* Cards */
  .card {
    padding: 15px;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  .card-header {
    padding: 15px;
    width: 100%;
    max-width: 100%;
  }

  .card-body {
    padding: 15px;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  .player-item-card,
  .player-shop-card {
    width: 100%;
    max-width: 100%;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  /* Prevent text overflow */
  h1, h2, h3, h4, h5, h6, p {
    overflow-wrap: break-word;
    word-wrap: break-word;
    max-width: 100%;
  }

  /* Toolbar Bottom */
  .toolbar-bottom {
    flex-direction: column;
    padding: 15px;
    gap: 15px;
  }

  .toolbar-info,
  .toolbar-actions {
    flex-direction: column;
    width: 100%;
    gap: 10px;
  }

  .toolbar-actions button {
    width: 100%;
  }

  /* Modals */
  .modal-overlay {
    padding: 10px;
    width: 100vw;
    overflow-x: hidden;
  }

  .modal-content {
    width: 95%;
    max-width: 95vw;
    padding: 20px;
    max-height: 90vh;
    overflow-y: auto;
    overflow-x: hidden;
  }

  .player-modal-content {
